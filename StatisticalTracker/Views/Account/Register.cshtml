@using System.Threading
@using System.Web.UI.WebControls
@using StatisticalTracker.Helpers
@model StatisticalTracker.Models.RegisterModel
@{
    ViewBag.Title = "Register";
}

@Styles.Render("~/Content/themes/base/css")

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>Create a new account.</h2>
</hgroup>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>Registration Form</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName)
            </li>
            <li>
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password)
            </li>
            <li>
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword)
            </li>
            <li>
                @Html.Label("Birthday")
                @Html.DropDownListFor(m => m.BirthdayMonth, SelectListItemHelper.GetMonths(), "-- Month --", new { style = "display: inline-block" }) /
                @Html.DropDownListFor(m => m.BirthdayDay, SelectListItemHelper.GetDays(), "-- Day --", new { style = "display: inline-block" }) /
                @Html.DropDownListFor(m => m.BirthdayYear, SelectListItemHelper.GetYears(), "-- Year --", new { style = "display: inline-block" })
                <div style="display:none" id="divAge">
                    Age: <label id="Age" style="display:inline-block"></label>
                </div>
                
            </li>

        </ol>


        <input type="submit" value="Register" />
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/register")
}
